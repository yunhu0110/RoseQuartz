              <script>
                function showGallery(category) {
                  var mainGallery = document.getElementById("mainGallery");
                  var diningRoomGallery = document.getElementById("diningRoomGallery");
                  var secondFloorGallery = document.getElementById("secondFloorGallery");
            
                  switch (category) {
                    case "Main":
                      mainGallery.style.display = "grid";
                      diningRoomGallery.style.display = "none";
                      secondFloorGallery.style.display = "none";
                      break;
                    case "Dining Room":
                      mainGallery.style.display = "none";
                      diningRoomGallery.style.display = "grid";
                      secondFloorGallery.style.display = "none";
                      break;
                    case "2F":
                      mainGallery.style.display = "none";
                      diningRoomGallery.style.display = "none";
                      secondFloorGallery.style.display = "grid";
                      break;
                    default:
                      mainGallery.style.display = "grid";
                      diningRoomGallery.style.display = "none";
                      secondFloorGallery.style.display = "none";
                      break;
                  }
                }
            
                function showImagePopup(imageUrl) {
                  var popupContainer = document.getElementById("imagePopup");
                  var popupImage = document.getElementById("popupImage");
            
                  popupImage.src = imageUrl;
                  popupContainer.classList.add("show");
                  document.addEventListener("keydown", handleKeyDown);
                }
            
                function hideImagePopup() {
                  var popupContainer = document.getElementById("imagePopup");
            
                  popupContainer.classList.remove("show");
                  document.removeEventListener("keydown", handleKeyDown);
                }
            
                function handleKeyDown(event) {
                  if (event.key === "Escape") {
                    hideImagePopup();
                  }
                }
              </script>
          
          
          
          
          
          
          
        
          
